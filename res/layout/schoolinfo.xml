<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schoolinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="invisible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:background="#09cc32"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:background="#09cc32"
            android:layout_marginTop="30dp" >
            
            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="675px"
                android:layout_height="443px"
                android:layout_gravity="center"
                android:layout_marginLeft="13.5px"
                android:layout_marginRight="15px"
                android:background="#ffffff" />
		
            <TextView
                android:id="@+id/textSSS"
                android:layout_width="330px"
                android:layout_height="443px"
                android:layout_marginRight="13.5px"
                android:background="@drawable/sleep_button_pressed"
                android:textSize="10pt"
                android:text="百鸽"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#09cc32" >

            <ImageView
                android:id="@+id/infoimg1"
                android:layout_width="330px"
                android:layout_height="443px"
                android:layout_marginLeft="13.5px"
                android:background="#ffffff"
                android:src="@drawable/blankpic" />

            <ImageView
                android:id="@+id/infoimg2"
                android:layout_width="330px"
                android:layout_height="443px"
                android:layout_marginLeft="15px"
                android:background="#ffffff"
                android:src="@drawable/blankpic" />

            <ImageView
                android:id="@+id/infoimg3"
                android:layout_width="330px"
                android:layout_height="443px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="13.5px"
                android:background="#ffffff"
                android:src="@drawable/blankpic" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>